{
  "name": "cicsia-vscode-extension",
  "displayName": "Cicsia VS Code Extension",
  "description": "VS Code Extension with Webview support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "extensionDependencies": [],
  "activationEvents": [
    "onCommand:cicsia-vscode-extension.showWebview"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cicsia-vscode-extension.showWebview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cicsia-vscode-extension.showWebview",
        "title": "Show Cicsia Webview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev": "webpack --watch --mode development"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
